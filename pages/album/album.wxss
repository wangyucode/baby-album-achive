/* pages/album/album.wxss */

page {
  height: 100%;
  background-color: #eee;
}

.container-album {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container-albums {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: space-around;
}

.no-album-image {
  width: 80%;
  height: 80vw;
  margin-top: 24rpx;
}

.no-album-text {
  font-size: 32rpx;
  color: #999;
}

.btn-new-album {
  width: 160rpx;
  height: 160rpx;
  position: fixed;
  bottom: 48rpx;
  right: 48rpx;
  padding: 0;
}

button[plain] {
  border: none;
  background-color: transparent;
}

.img-new-album {
  width: 160rpx;
  height: 160rpx;
}

.album {
  display: flex;
  flex-direction: column;
  margin: 24rpx;
  width: 36%;
  padding: 24rpx;
  box-shadow: 10rpx 10rpx 5px #888;
  border: 1px solid #bfbfbf;
  background-color: #fff;
}

.album-hover{
  box-shadow: 20rpx 20rpx 10px #888;
}

.img-cover {
  width: 100%;
  height: 36vw;
}

.text-name{
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #333;
  font-style: italic;
}
