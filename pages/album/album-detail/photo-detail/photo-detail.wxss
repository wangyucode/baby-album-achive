.container-add-photo {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.img-upload {
  width: 100%;
  height: 100vw;
  background: #eee;
  align-self: center;
}

.input-desc {
  margin: 24rpx;
  border: 1px solid;
  font-size: 30rpx;
  border-radius: 10rpx;
  border-color: #ddd;
  padding: 10rpx;
  flex: 1;
}

.container-input {
  display: flex;
  align-items: center;
}

.btn-ok {
  align-self: center;
  margin: 24rpx;
  font-size: 28rpx;
}

.btn-delete {
  flex: 1;
  margin: 24rpx;
  font-size: 28rpx;
}

.btn-set-cover {
  flex: 1;
  margin: 24rpx;
  font-size: 28rpx;
}

.container-manager {
  display: flex;
  align-items: center;
}

.container-manager-admin {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 12rpx;
}

.text-manager {
  font-size: 32rpx;
  margin-left: 24rpx;
}

.text-manager-name {
  font-size: 24rpx;
  margin-top: 12rpx;
}

.image-manager {
  width: 84rpx;
  height: 84rpx;
  border-radius: 42rpx;
  border: 1px solid #bfbfbf;
}
