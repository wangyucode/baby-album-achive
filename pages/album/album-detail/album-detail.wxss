/* pages/album/album-detail/album-detail.wxss */

.container-new-album {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.input-name {
  margin: 24rpx;
  border: 1px solid;
  font-size: 30rpx;
  border-radius: 10rpx;
  border-color: #ddd;
  padding: 10rpx;
  flex: 1;
}

.container-manager {
  display: flex;
  align-items: center;
}

.scroll-manager-add {
  width: 65vw;
}

.scroll-manager {
  width: 80vw;
}

.add-user {
  width: 100rpx;
  height: 100rpx;
}

.btn-add-user {
  padding: 0;
  margin-bottom: 18rpx;
  margin-left: 18rpx;
  display: flex;
}

button[plain] {
  border: none;
  background-color: transparent;
}

.container-manager-admin {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 24rpx;
}

.text-manager {
  font-size: 36rpx;
  margin-left: 24rpx;
}

.container-input {
  display: flex;
  align-items: center;
  width: 100%;
}

.text-manager-name {
  font-size: 28rpx;
  margin-top: 12rpx;
}

.image-manager {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  border: 1px solid #bfbfbf;
}

.btn-ok {
  align-self: center;
  margin: 24rpx;
  font-size: 28rpx;
}

.container-photo {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: space-between;
  width: 93%;
  margin: 24rpx;
}

.img-photo {
  width: 29%;
  height: 27vw;
  box-shadow: 10rpx 10rpx 5px #888;
  border: 1px solid #bfbfbf;
  margin: 5rpx;
}
