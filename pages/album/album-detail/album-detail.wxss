/* pages/album/album-detail/album-detail.wxss */

.container-new-album {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.input-name {
  margin-left: 24rpx;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  border: 1px solid;
  font-size: 30rpx;
  border-radius: 10rpx;
  border-color: #ddd;
  padding: 10rpx;
  flex: 1;
}

.container-manager {
  display: flex;
  align-items: center;
}

.scroll-manager-add {
  width: 70vw;
}

.scroll-manager {
  width: 80vw;
}

.add-user {
  width: 84rpx;
  height: 84rpx;
}

.btn-add-user {
  padding: 0;
  margin-bottom: 18rpx;
  margin-left: 18rpx;
  display: flex;
}

button[plain] {
  border: none;
  background-color: transparent;
}

.container-manager-admin {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
}

.text-manager {
  font-size: 30rpx;
  margin-left: 24rpx;
}

.container-input {
  display: flex;
  align-items: center;
  width: 100%;
}

.text-manager-name {
  font-size: 24rpx;
  margin-top: 12rpx;
}

.image-manager {
  width: 84rpx;
  height: 84rpx;
  border-radius: 42rpx;
  border: 1px solid #bfbfbf;
}

.btn-ok {
  align-self: center;
  margin: 24rpx;
  font-size: 28rpx;
}

.container-photo {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: space-between;
  width: 93%;
  margin: 24rpx;
}

.img-photo {
  width: 30.4%;
  height: 28.3vw;
  box-shadow: 6rpx 6rpx 2px #888;
  border: 1px solid #bfbfbf;
  margin: 8rpx;
}

.hbox{
  margin: 24rpx;
  width: 94%;
}

.btn-delete{
  flex: 1;
  margin-right: 24rpx;
  font-size: 28rpx;
}

.btn-add-photo{
  flex: 1;
  font-size: 28rpx;
}
